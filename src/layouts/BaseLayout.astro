---
import "../styles/global.css";
const { title = "MySite" } = Astro.props;
---

<html lang="en" x-data="{ menuOpen: false }">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <script type="module" src="/alpine.js"></script>
  </head>

  <body class="bg-gray-50 text-gray-900 font-sans min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow-md p-4 flex justify-between items-center max-w-6xl mx-auto w-full">
      <h1 class="text-2xl font-bold text-blue-600">MySite</h1>
      <nav class="space-x-6 hidden md:flex text-gray-700">
        <a href="/" class="hover:text-blue-600">Home</a>
        <a href="/about" class="hover:text-blue-600">About</a>
        <a href="/contact" class="hover:text-blue-600">Contact</a>
      </nav>
      <button
        @click="menuOpen = !menuOpen"
        class="md:hidden px-3 py-2 border rounded text-gray-700"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" >
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </header>

    <!-- Mobile Menu -->
    <nav
      x-show="menuOpen"
      class="md:hidden bg-white shadow p-4 space-y-2 max-w-6xl mx-auto w-full"
      style="display:none"
    >
      <a href="/" class="block py-2 text-gray-700 hover:text-blue-600">Home</a>
      <a href="/about" class="block py-2 text-gray-700 hover:text-blue-600">About</a>
      <a href="/contact" class="block py-2 text-gray-700 hover:text-blue-600">Contact</a>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow flex flex-col justify-center items-center max-w-4xl mx-auto px-4 py-20 w-full text-center">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="text-center py-6 text-sm text-gray-500">
      Â© 2025 MySite. Built with Astro, Tailwind, and Alpine.
    </footer>
  </body>
</html>
