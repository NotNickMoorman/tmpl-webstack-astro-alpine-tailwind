---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home - MySite">
  <div x-data="{ showMessage: false }" class="w-full max-w-md mx-auto">
    <h2 class="text-5xl font-extrabold mb-6 text-blue-800 text-center">Welcome to Astro + Tailwind + Alpine</h2>
    <p class="text-lg text-gray-700 mb-8 text-center">
      This is a simple demo page showing integration of Tailwind CSS and Alpine.js via npm.
    </p>
    <button
      @click="showMessage = !showMessage"
      class="px-8 py-3 bg-blue-600 text-white rounded hover:bg-blue-700 transition block mx-auto"
    >
      Toggle Message
    </button>

    <template x-if="showMessage">
      <p class="mt-6 text-center text-green-600 font-semibold">
        ðŸŽ‰ You clicked the button and toggled this message!
      </p>
    </template>
  </div>
</BaseLayout>
